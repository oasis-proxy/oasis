{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extName__",
  "version": "2.0.0",
  "description": "__MSG_extDesc__",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "src/assets/icons/light/ripple-icon-light-16x16-blurred.png",
    "48": "src/assets/icons/light/ripple-icon-light-64x64-blurred.png",
    "128": "src/assets/icons/light/ripple-icon-light-128x128-blurred.png"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ],
  "permissions": [
    "alarms",
    "contextMenus",
    "downloads",
    "tabs",
    "webRequest",
    "webRequestAuthProvider",
    "unlimitedStorage",
    "storage",
    "proxy",
    "webNavigation",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "host_permissions": ["*://*/*"]
}
