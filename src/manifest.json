{
  "manifest_version": 3,
  "name": "Oasis Proxy",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "src/assets/icons/logo.png",
    "48": "src/assets/icons/logo.png",
    "128": "src/assets/icons/logo-128.png"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ],
  "permissions": [
    "alarms",
    "contextMenus",
    "downloads",
    "webRequest",
    "webRequestAuthProvider",
    "unlimitedStorage",
    "storage",
    "proxy",
    "webNavigation",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "host_permissions": ["*://*/*"]
}
